@model Web.Models.ProjectModel

@{
    ViewBag.Title = "Create";
}
<style>
    body {
        background-image: url("http://www.myfreetextures.com/wp-content/uploads/2011/06/illust31.jpg");
    }
</style>

<body>
    <h2>Create Issue for this project</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>ProjectDTO</h4>
            <hr />


            @Html.HiddenFor(model => Model.projectId)


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                @Html.LabelFor(model => model.projectIssue.TypeOfIssue, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.projectIssue.TypeOfIssue, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.projectIssue.TypeOfIssue, "", new { @class = "text-danger" })
                </div>

                @Html.LabelFor(model => model.projectIssue.Requestor, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.projectIssue.Requestor, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.projectIssue.Requestor, "", new { @class = "text-danger" })
                </div>

                @Html.LabelFor(model => model.projectIssue.ShortMessage, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.projectIssue.ShortMessage, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.projectIssue.ShortMessage, "", new { @class = "text-danger" })
                </div>

                @Html.LabelFor(model => model.projectIssue.Text, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.projectIssue.Text, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.projectIssue.Text, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
@Html.ActionLink("Back to List", "Issues", new { id = Model.projectId })
    </div>
</body>