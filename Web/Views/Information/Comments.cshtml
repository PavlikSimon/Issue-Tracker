@using Web.Models
@using Microsoft.AspNet.Identity
@using Web.Helpers
@model Web.Models.IssueModel

@{
    ViewBag.Title = "Comments";
}
<style>
    body {
        background-image: url("http://www.myfreetextures.com/wp-content/uploads/2011/06/illust31.jpg");
    }
</style>
<body>
    <h2>Comments</h2>

    <p>
        @Html.ActionLink("Create New", "CommentsCreate", new { id = Model.issueId })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.issueComment.Id)
            </th>
            <th>
                From User
            </th>

            <th>
                @Html.DisplayNameFor(model => model.issueComment.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.issueComment.PostedDate)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model.issueComments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommentatorName)
                    (ID: @Html.DisplayFor(modelItem => item.CommentatorId), @Html.DisplayFor(modelItem => item.CommentatorRole))
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostedDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "CommentsEdit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "CommentsDelete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

    <div>
        @Html.ActionLink("Back to Issues", "RedirectToIssuesFromComments", new { id = Model.issueId })
    </div>

</body>